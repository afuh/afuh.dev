---
import Container from './Container.astro'
import { getSiteContent } from '../lib/contentful'

type Props = {
  title?: string
}

const siteContent = await getSiteContent()

const { title = siteContent.title } = Astro.props
const isHome = Astro.url.pathname === '/'
---

<Container component="header">
  <h1>{title}</h1>
  {isHome && <h2>{siteContent.shortDescription}</h2>}
</Container>

<style>
  header {
    margin-top: 100px;
  }

  h1,
  h2 {
    font-weight: bold;
    color: var(--theme-primary);
    margin: 0;
  }

  h1 {
    font-size: 5.4rem;
  }

  h2 {
    font-size: 2rem;
  }

  @media (max-width: 50em) {
    header {
      margin-top: 16px;
    }

    h1 {
      font-size: 4rem;
    }
  }
</style>
