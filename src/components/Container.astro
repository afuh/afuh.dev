---
import type { HTMLTag, Polymorphic } from 'astro/types'

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>

const { as, class: className, ...props } = Astro.props
const Component = as || 'div'
---

<Component class:list={['container', className]} {...props}>
  <slot />
</Component>
<style>
  .container {
    max-width: 1024px;
    margin-left: 12%;
    margin-right: 12%;
  }

  @media (max-width: 50em) {
    .container {
      margin-left: 16px;
      margin-right: 16px;
    }
  }
</style>
