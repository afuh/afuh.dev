---
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'div'>

const { props } = Astro
---

<div class="outer" {...props}>
  <div class="inner">
    <slot />
  </div>
</div>

<style>
  .outer {
    width: 100%;
    display: flex;
    align-items: center;
    padding: 0 12%;
  }

  @media (max-width: 50em) {
    .outer {
      padding: 0 16px;
    }
  }

  .inner {
    max-width: 1024px;
  }
</style>
