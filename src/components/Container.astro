---
import type { HTMLTag } from 'astro/types'

type Props = {
  component?: HTMLTag
  class?: string
}

const { component, class: className, ...props } = Astro.props
const Component = component || 'div'
---

<Component class:list={['container', className]} {...props}>
  <slot />
</Component>
<style>
  .container {
    max-width: 1024px;
    margin-left: 12%;
    margin-right: 12%;
  }

  @media (max-width: 50em) {
    .container {
      margin-left: 16px;
      margin-right: 16px;
    }
  }
</style>
