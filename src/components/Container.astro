---
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'div'>

const { props } = Astro
---

<div class="wrapper" {...props}>
  <div>
    <slot />
  </div>
</div>

<style>
  div.wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    padding: 0 12%;
  }
</style>
