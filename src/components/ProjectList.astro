---
import { getProjects } from '../lib/contentful'

const projects = await getProjects()
---

<section>
  <ul>
    {
      projects.map((item) => (
        <li>
          <a href={`/${item.slug}`}>{item.title}</a>
        </li>
      ))
    }
  </ul>
</section>

<style>
  ul {
    margin: 0;
    padding: 0;
    list-style-type: none;
  }

  li {
    margin: 2rem 0;
  }

  a {
    font-size: 2.4rem;
    font-weight: 800;
  }

  a:hover {
    color: var(--theme-primary-soft);
  }
</style>
