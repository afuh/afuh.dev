---
import { getProjects } from '../lib/contentful'

const projects = await getProjects()
---

<section>
  <ul>
    {
      projects.map(({ title, slug }) => (
        <li>
          <a class="link-strong" href={`/${slug}`}>
            {title}
          </a>
        </li>
      ))
    }
  </ul>
</section>

<style>
  ul {
    margin: 0;
    padding: 0;
    list-style-type: none;
  }

  li {
    margin: 2rem 0;
  }

  li .link-strong {
    font-size: 2.4rem;
    font-weight: 800;
  }
</style>
