---
import { marked } from 'marked'
import Page from '../layouts/Page.astro'
import { getSiteContent } from '../lib/contentful'
import MarkdownSection from '../components/MarkdownSection.astro'
import ProjectList from '../components/ProjectList.astro'

const { description } = await getSiteContent()
---

<Page>
  <MarkdownSection set:html={marked.parse(description)} style={{ paddingBottom: '32px', marginTop: 0 }} />
  <ProjectList />
</Page>
